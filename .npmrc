
# Configuration for package management on Cloudflare Pages

# Platform-specific dependency configuration
optional=true
fund=false
audit=false

# Set legacy peer deps to true for compatibility
legacy-peer-deps=true
strict-peer-dependencies=false

# We need to run scripts for esbuild installation
ignore-scripts=false

# Set specific versions for platform-specific dependencies to prevent installation
@rollup/rollup-win32-x64-msvc=0.0.0
@rollup/rollup-linux-x64-gnu=0.0.0
@rollup/rollup-darwin-x64=0.0.0
@rollup/rollup-darwin-arm64=0.0.0

# Force default dependency to include @esbuild/linux-x64
@esbuild/linux-x64=latest

# Disable platform-specific checks for rollup packages
platform-dep-check=false
