
# Configuration for package management

# Allow optional dependencies since esbuild needs them
optional=true
fund=false
audit=false

# Set legacy peer deps to true for compatibility
legacy-peer-deps=true
strict-peer-dependencies=false

# We need to run scripts for esbuild installation
ignore-scripts=false

# Skip platform-specific rollup binaries
@rollup/rollup-win32-x64-msvc=0.0.0
@rollup/rollup-linux-x64-gnu=0.0.0
@rollup/rollup-darwin-x64=0.0.0
@rollup/rollup-darwin-arm64=0.0.0
